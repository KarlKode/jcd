<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="main" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="436.0" prefWidth="808.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="ch.ethz.jcd.dialog.SearchDialogController">
    <children>
        <GridPane maxWidth="1.7976931348623157E308">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" maxWidth="283.0" minWidth="10.0" prefWidth="129.0"/>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0"
                                   prefWidth="451.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Path:" GridPane.rowIndex="1"/>
                <Label text="Search term:"/>
                <TextField fx:id="textFieldFind" GridPane.columnIndex="1"/>
                <TextField fx:id="textFieldDirectory" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="808.0" BorderPane.alignment="CENTER" GridPane.rowIndex="2">
            <children>
                <CheckBox fx:id="checkBoxCaseSensitive" mnemonicParsing="false" text="Case Sensitive"
                          GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </CheckBox>
                <CheckBox fx:id="checkBoxSubdirectories" mnemonicParsing="false" text="Search in Subdirectories"
                          GridPane.rowIndex="5"/>
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="buttonFind" defaultButton="true" mnemonicParsing="false" onAction="#onActionButtonFind"
                        text="Find">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="buttonCancel" cancelButton="true" mnemonicParsing="false"
                        onAction="#onActionButtonCancel" text="Cancel">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <Separator prefWidth="200.0"/>
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <content>
                <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <center>
                        <ListView fx:id="listViewResults" prefHeight="200.0" prefWidth="200.0"
                                  BorderPane.alignment="CENTER"/>
                    </center>
                </BorderPane>
            </content>
        </ScrollPane>
    </children>
</VBox>
