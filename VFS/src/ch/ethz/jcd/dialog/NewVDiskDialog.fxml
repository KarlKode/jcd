<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ch.ethz.jcd.dialog.NewVDiskController">
    <children>
        <GridPane hgap="4.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="File:"/>
                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="# Blocks (1e3):"
                       GridPane.rowIndex="1"/>
                <TextField fx:id="textFieldFile" GridPane.columnIndex="1"/>
                <Button fx:id="buttonChoose" mnemonicParsing="false" onAction="#onActionButtonChoose" text="Choose ... "
                        GridPane.columnIndex="2"/>
                <Slider fx:id="sliderFileSize" blockIncrement="10.0" majorTickUnit="10.0" max="200.0" min="10.0"
                        minorTickCount="2" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="2000.0"
                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <HBox alignment="CENTER" prefHeight="100.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <children>
                        <Label fx:id="labelSize" text="-"/>
                        <Label text=" MB"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
        <HBox fillHeight="false" nodeOrientation="RIGHT_TO_LEFT" prefWidth="200.0">
            <children>
                <Button fx:id="buttonCreate" defaultButton="true" mnemonicParsing="false"
                        onAction="#onActionButtonCreate" text="Create">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="20.0" top="20.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="buttonCancel" cancelButton="true" mnemonicParsing="false"
                        onAction="#onActionButtonCancel" text="Cancel">
                    <HBox.margin>
                        <Insets top="20.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
