<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefWidth="450.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="ch.ethz.jcd.dialog.InputDialogController">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="labelInput" text="Name:Namaaaaaaaaaaaae:"/>
                <TextField fx:id="textFieldInput" GridPane.columnIndex="1"/>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </GridPane>
        <HBox nodeOrientation="RIGHT_TO_LEFT" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <Button fx:id="buttonOk" defaultButton="true" mnemonicParsing="false" onAction="#onActionButtonOk"
                        text="Ok">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="buttonCancel" cancelButton="true" mnemonicParsing="false"
                        onAction="#onActionButtonCancel" text="Cancel">
                    <HBox.margin>
                        <Insets top="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
